{
	"name":"网址收纳盒",
	"version":"1.0.2",
	"manifest_version":2,
	"description":"快速收藏网址至熊猫创意网址收纳盒。",
	"icons":{
		"16":"img/16.png",
		"48":"img/48.png",
		"128":"img/128.png"
	},
    "browser_action": {
      "default_icon": "img/48.png",
      "default_title": "点击快速收藏网址", 
      "default_popup": "popup.html"
    },
    "background": {
      "page": "background.html"
    },
    "permissions": [
	  "tabs",
	  "https://*/",
	  "http://*/",
	  "notifications",
	  "unlimitedStorage",
	  "background"
    ],
	"options_page": "options.html"
}